{
  "compilerOptions": {
    "target": "es2023",
    "module": "nodenext",
    "lib": ["es2023", "dom"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "strict": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "ts-node": {
    "compilerOptions": {
      "esm": true
    }
  }
}
