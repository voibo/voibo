{
  "name": "Voibo",
  "description": "Collaborative Meeting Intelligence Platform",
  "author": "(c) 2024 Voibo",
  "license": "Apache-2.0",
  "version": "0.0.0",
  "main": "dist/main.mjs",
  "type": "module",
  "scripts": {
    "start": "npm run clean:webpack && run-p watch:webpack run:electron",
    "run:electron": "wait-on ./dist/index.html ./dist/main.mjs && electronmon .",
    "build:webpack:dev": "cross-env NODE_ENV=\"development\" NODE_OPTIONS=--max-old-space-size=4096 webpack --progress",
    "build:webpack:release": "cross-env NODE_ENV=\"production\" NODE_OPTIONS=--max-old-space-size=4096 webpack --progress",
    "build:electron:windows": "electron-builder",
    "build:electron:mac": "electron-builder --mac --arm64",
    "watch:webpack": "cross-env NODE_ENV=\"development\" NODE_OPTIONS=--max-old-space-size=4096 webpack --progress --watch",
    "release:mac": "run-s clean build:webpack:release build:electron:mac",
    "clean": "run-p clean:webpack clean:electron",
    "clean:webpack": "rimraf dist",
    "clean:electron": "rimraf built",
    "add-license": "node scripts/add-license.cjs"
  },
  "keywords": [],
  "electronmon": {
    "patterns": [
      "dist/**/*"
    ]
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.1",
    "@types/bindings": "^1.5.5",
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.0",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electronmon": "^2.0.3",
    "html-webpack-plugin": "^5.6.3",
    "mini-css-extract-plugin": "^2.9.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.49",
    "postcss-loader": "^8.1.1",
    "rimraf": "^6.0.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "wait-on": "^8.0.1",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4",
    "worker-loader": "^3.0.8"
  },
  "dependencies": {
    "@emotion/react": "^11.13.5",
    "@emotion/styled": "^11.13.5",
    "@google-cloud/speech": "^6.7.0",
    "@google/generative-ai": "^0.21.0",
    "@grpc/grpc-js": "^1.12.2",
    "@grpc/proto-loader": "^0.7.13",
    "@langchain/anthropic": "^0.3.8",
    "@langchain/core": "^0.3.19",
    "@langchain/google-genai": "^0.1.4",
    "@langchain/groq": "^0.1.2",
    "@langchain/langgraph": "^0.2.23",
    "@langchain/openai": "^0.3.14",
    "@monaco-editor/react": "^4.6.0",
    "@mui/icons-material": "^6.1.9",
    "@mui/lab": "^6.0.0-beta.17",
    "@mui/material": "^6.1.9",
    "@mui/x-date-pickers": "^7.23.0",
    "@ricky0123/vad-react": "^0.0.25",
    "@ricky0123/vad-web": "^0.0.19",
    "@types/file-saver": "^2.0.7",
    "@types/wav": "^1.0.4",
    "@voibo/desktop-audio-capture": "^1.0.0",
    "@xyflow/react": "^12.3.5",
    "copy-webpack-plugin": "^12.0.2",
    "dayjs": "^1.11.13",
    "dify-client": "^2.3.2",
    "domhandler": "^5.0.3",
    "dotenv": "^16.4.5",
    "duck-duck-scrape": "^2.2.6",
    "electron-log": "^5.2.3",
    "electron-store": "^10.0.0",
    "file-saver": "^2.0.5",
    "google-protobuf": "^3.21.4",
    "htmlparser2": "^9.1.0",
    "idb": "^8.0.0",
    "idb-keyval": "^6.2.1",
    "immer": "^10.1.1",
    "jszip": "^3.10.1",
    "langchain": "^0.3.6",
    "mermaid": "^11.4.1",
    "monaco-editor": "^0.52.0",
    "monaco-editor-webpack-plugin": "^7.1.0",
    "openai": "^4.73.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.2",
    "react-jsx-parser": "^2.2.2",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^7.0.1",
    "remark-gfm": "^4.0.0",
    "tailwindcss": "^3.4.15",
    "uuid": "^11.0.3",
    "wav": "^1.0.2",
    "write-file-webpack-plugin": "^4.5.1",
    "zod": "^3.23.8",
    "zustand": "^5.0.1"
  },
  "build": {
    "productName": "Voibo",
    "artifactName": "${productName}-${version}-${platform}-${arch}.${ext}",
    "copyright": "(c) 2024 Voibo",
    "files": [
      "dist/**/*"
    ],
    "directories": {
      "output": "built"
    },
    "mac": {
      "appId": "org.voibo.app.v1",
      "target": [
        "dmg"
      ],
      "entitlements": "./resources/entitlements.mac.plist",
      "entitlementsInherit": "./resources/entitlements.mac.plist",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "extendInfo": {
        "NSMicrophoneUsageDescription": "Please give us access to your microphone",
        "com.apple.security.device.audio-input": true
      },
      "icon": "resources/icon.png",
      "asarUnpack": [
        "./node_modules/@voibo/desktop-audio-capture/build/Release/addon.node"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}
